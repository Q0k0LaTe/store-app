<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/products">Products</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="card shadow-sm">
        <img src="<%= product.imageUrl || '/images/placeholder.png' %>" class="card-img-top p-4" 
             alt="<%= product.name %>" style="height: 400px; object-fit: contain;">
      </div>
    </div>
    
    <div class="col-md-6">
      <h1 class="mb-3"><%= product.name %></h1>
      
      <div class="mb-4">
        <h2 class="text-primary fs-3">$<%= product.price.toFixed(2) %></h2>
      </div>
      
      <div class="card mb-4">
        <div class="card-header bg-light">
          <h3 class="fs-5 mb-0">Description</h3>
        </div>
        <div class="card-body">
          <p class="card-text"><%= product.description || 'No description available.' %></p>
        </div>
      </div>
      
      <div class="d-grid gap-2 d-md-block">
        <button class="btn btn-primary btn-lg">Add to Cart</button>
        <a href="/products" class="btn btn-outline-secondary btn-lg">Back to Products</a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>