<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="row mb-4">
    <div class="col">
      <h2><%= title %></h2>
    </div>
  </div>
  
  <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    <% products.forEach(product => { %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="<%= product.imageUrl || '/images/placeholder.png' %>" class="card-img-top" 
               alt="<%= product.name %>" style="height: 200px; object-fit: contain; padding: 15px;">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text text-truncate"><%= product.description %></p>
            <p class="card-text fw-bold text-primary">$<%= product.price.toFixed(2) %></p>
          </div>
          <div class="card-footer bg-transparent border-top-0">
            <div class="d-flex justify-content-between">
              <!-- Add to Cart Form -->
              <form action="/cart/add" method="POST" class="d-inline me-2">
                <input type="hidden" name="productId" value="<%= product._id %>">
                <!-- Default quantity is 1 -->
                <input type="hidden" name="quantity" value="1">
                <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
              </form>
              <a href="/products/<%= product._id %>" class="btn btn-primary btn-sm">View Details</a>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  
  <div class="row mt-4">
    <div class="col text-center">
      <a href="/products/add" class="btn btn-success">Add New Product</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>